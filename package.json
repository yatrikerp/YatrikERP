{
  "name": "yatrik-erp",
  "version": "1.0.0",
  "description": "YATRIK ERP - Complete Bus Management System",
  "main": "index.js",
  "scripts": {
    "admin:depots:ensure": "cd backend && node scripts/ensure-depot-credentials.js ensure Yatrik123",
    "admin:depots:reset": "cd backend && node scripts/ensure-depot-credentials.js reset Yatrik123",
    "generate-trips": "node backend/scripts/generate-daily-trip-schedules.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "echo 'Backend only - no build needed'",
    "build:frontend": "cd frontend && npm run build",
    "build:production": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "cd backend && npm start",
    "start:production": "cd backend && npm start",
    "test:e2e": "mocha \"tests/e2e/**/*.spec.js\" --timeout 90000 --reporter mochawesome",
    "test:login": "mocha tests/roleLoginTests.js --timeout 90000 --reporter mochawesome",
    "test": "mocha tests/*.js --timeout 90000 --reporter mochawesome",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:report": "playwright show-report",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:chromium": "playwright test --project=chromium",
    "test:playwright:firefox": "playwright test --project=firefox",
    "test:playwright:webkit": "playwright test --project=webkit",
    "test:playwright:dashboard": "node generate-playwright-dashboard.js",
    "test:playwright:complete": "run-complete-playwright-test.bat",
    "playwright:install": "playwright install",
    "deploy:docker": "docker-compose up -d --build",
    "deploy:docker:stop": "docker-compose down",
    "deploy:docker:logs": "docker-compose logs -f",
    "deploy:frontend": "cd frontend && npm run build && vercel --prod",
    "deploy:backend": "cd backend && railway deploy",
    "deploy:render": "cd backend && render deploy",
    "deploy:cyclic": "cd backend && cyclic deploy",
    "deploy:fly": "cd backend && flyctl deploy",
    "setup:env": "copy env.production.template .env && copy backend\\env.production.template backend\\.env && copy frontend\\env.production.template frontend\\.env",
    "setup:free": "node AUTO_SETUP_FREE_HOSTING.js",
    "auto:setup": "node AUTO_SETUP_FREE_HOSTING.js",
    "health": "curl http://localhost:5000/api/health",
    "free:setup": "bash setup-free-hosting.sh setup",
    "free:env": "bash setup-free-hosting.sh env",
    "free:deploy": "bash setup-free-hosting.sh deploy",
    "quick:deploy": "node AUTO_SETUP_FREE_HOSTING.js && echo 'Follow DEPLOYMENT_INSTRUCTIONS.md for next steps'"
  },
  "keywords": [
    "bus",
    "erp",
    "transport",
    "management"
  ],
  "author": "YATRIK ERP Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.9.1",
    "chromedriver": "^131.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "mocha": "^10.8.2",
    "mochawesome": "^7.1.4",
    "selenium-webdriver": "^4.24.0"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "csv-parser": "^3.2.0",
    "multer": "^2.0.2"
  }
}
